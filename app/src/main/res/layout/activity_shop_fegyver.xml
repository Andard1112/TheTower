<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paper_hatter2"
    tools:context=".ShopFegyver">

    <ImageView
        android:id="@+id/ivFegyver"
        android:layout_width="189dp"
        android:layout_height="281dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/sword"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/ivFegyverEgykezes1"
        android:layout_width="189dp"
        android:layout_height="123dp"
        android:layout_below="@id/spaceKardfelett"

        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        app:srcCompat="@drawable/dagger"
        tools:visibility="invisible" />

    <ImageView
        android:id="@+id/ivFegyverEgykezes2"
        android:layout_width="189dp"
        android:layout_height="123dp"
        android:layout_below="@id/ivFegyverEgykezes1"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="0dp"
        app:srcCompat="@drawable/dagger"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/tvFegyverLeiras"
        android:layout_width="542dp"
        android:layout_height="339dp"
        android:layout_alignParentRight="true"
        android:enabled="false"
        android:gravity="center"
        android:text="Nem tudom\n nem tudom"
        tools:visibility="invisible"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tvFegyverLeirasEgykezes1"
        android:layout_width="542dp"
        android:layout_height="123dp"
        android:layout_below="@id/spaceKardfelett"
        android:layout_alignParentRight="true"
        android:enabled="false"
        android:gravity="center"
        android:text="Nem tudom\n nem tudom"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/tvFegyverLeirasEgykezes2"
        android:layout_width="542dp"
        android:layout_height="124dp"
        android:layout_below="@id/tvFegyverLeirasEgykezes1"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-1dp"
        android:enabled="false"
        android:gravity="center"
        android:text="Nem tudom\n nem tudom"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/btnUppgrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvFegyverLeiras"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="10dp"
        android:text="FejlesztÃ©s" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvFegyverLeiras"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/btnUppgrade"
        android:text="Rendben" />

    <Space
        android:id="@+id/spaceKardfelett"
        android:layout_width="189dp"
        android:layout_height="67dp" />
</RelativeLayout>