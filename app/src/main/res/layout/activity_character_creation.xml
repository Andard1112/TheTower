<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".characterCreation"
    android:background="@drawable/fo_kepernyo"
    >


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="95dp"
        android:layout_height="69dp"
        app:srcCompat="@mipmap/ic_launcher"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="261dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <Button
                android:id="@+id/btnColorDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:background="@drawable/balra_mutato_nyil"/>
            <Button
                android:id="@+id/btnHairDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:background="@drawable/balra_mutato_nyil"/>
            <Button
                android:id="@+id/btnBeardDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:background="@drawable/balra_mutato_nyil"/>
            <Button
                android:id="@+id/btnEarDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:background="@drawable/balra_mutato_nyil"
                android:enabled="false"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <EditText
                android:id="@+id/etName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Karaktered neve:"
                />
            <ImageView
                android:id="@+id/ivcharacter"
                android:layout_width="216dp"
                android:layout_height="222dp"
                tools:layout_editor_absoluteX="257dp"
                tools:layout_editor_absoluteY="77dp"
                tools:srcCompat="@tools:sample/avatars[3]" />
            <Switch
                android:id="@+id/swtGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nem: Férfi-Nő"
                />
            <Button
                android:id="@+id/btnCreate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Karakter létrehozás"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="261dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/btnHairUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                tools:layout_editor_absoluteX="494dp"
                tools:layout_editor_absoluteY="152dp"
                android:background="@drawable/jobbra_mutato_nyil"/>
            <Button
                android:id="@+id/btnColorUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                tools:layout_editor_absoluteX="494dp"
                tools:layout_editor_absoluteY="85dp"
                android:background="@drawable/jobbra_mutato_nyil"/>
            <Button
                android:id="@+id/btnBeardUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                tools:layout_editor_absoluteX="496dp"
                tools:layout_editor_absoluteY="222dp"
                android:background="@drawable/jobbra_mutato_nyil"/>
            <Button
                android:id="@+id/btnEarUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                tools:layout_editor_absoluteX="496dp"
                tools:layout_editor_absoluteY="222dp"
                android:background="@drawable/jobbra_mutato_nyil"
                android:enabled="false"
                />


        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>